{
  "name": "docs",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "apps/docs/docs",
  "projectType": "application",
  "tags": ["docs"],
  "targets": {
    "serve": {
      "executor": "nx:run-commands",
      "options": {
        "command": "docusaurus start apps/docs --port 3001"
      }
    },
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{workspaceRoot}/dist/apps/docs"],
      "options": {
        "command": "docusaurus build apps/docs --out-dir ../../dist/apps/docs"
      }
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "markdownlint-cli2 \"apps/docs/**/*.md\" \"apps/docs/**/*.mdx\" && node tools/docs/check-links.mjs"
      }
    },
    "ci": {
      "executor": "nx:run-commands",
      "options": {
        "command": "nx lint docs && nx build docs"
      }
    }
  }
}
