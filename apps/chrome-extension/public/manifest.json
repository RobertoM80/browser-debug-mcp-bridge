{
  "manifest_version": 3,
  "name": "Browser Debug MCP Bridge",
  "version": "1.0.0",
  "description": "Capture browser events and errors for debugging via MCP",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["injected-script.js", "content-script.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Browser Debug MCP Bridge"
  }
}
